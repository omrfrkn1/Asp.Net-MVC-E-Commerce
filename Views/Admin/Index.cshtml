

@{
    ViewBag.Title = "Index";
    Layout = "~/Layouts/AdminLayout.cshtml";
}

<div class="container-fluid bg-white rounded-4 h-100">
    <div class="row p-4" style="height: 5%;">
        <div class="h2 ps-3">Anasayfa</div>
    </div>
    <div class="row p-4 text-white" style="height: 95%;">

        <div class="col-4 p-3">
