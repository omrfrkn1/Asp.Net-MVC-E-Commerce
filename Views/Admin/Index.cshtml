                    </div>
                </div>
                <div class="row h-75">
                    <div class="col-12 d-flex">
                        <div class="mt-auto display-1 fw-bold" style="line-height: 70%;">@ViewBag.MagazaIstekleri</div>
                    </div>
                </div>
                <a href="" class="stretched-link"></a>
            </div>
        </div>

        <div class="col-4 p-3">
            <div class="bg-primary h-100 rounded-3 p-4 position-relative">
                <div class="row h-25">
                    <div class="col-12">
